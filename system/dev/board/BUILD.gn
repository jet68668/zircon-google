group("board") {
  deps = [
    "machina",
    "qemu",
    "test",
  ]
  if (current_cpu == "arm64") {
    deps += [
      "astro",
      "gauss",
      "hikey960",
      "imx8mevk",
      "imx8mmevk",
      "mt8167s_ref",
      "sherlock",
      "vim",
    ]
    metadata = {
      sdk_board_list = [
        "gauss",
        "hikey960",
        "qemu",
        "vim2",
        "imx8mevk",
      ]
    }
  }
}
