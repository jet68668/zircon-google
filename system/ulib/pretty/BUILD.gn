library("pretty") {
  sdk = "static"
  sdk_headers = [
    "pretty/hexdump.h",
    "pretty/sizes.h",
  ]
  kernel = true
  host = true
  static = true
  sources = [
    "hexdump.c",
    "sizes.c",
  ]
  if (!is_kernel && is_fuchsia) {
    deps = [
      "$zx/system/ulib/fdio",
    ]
  }
}

test("pretty-test") {
  sources = [
    "test.c",
  ]
  deps = [
    ":pretty",
    "$zx/system/ulib/unittest",
  ]
}
